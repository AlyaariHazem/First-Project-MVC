<table class="styled-table">
    <thead>
        <tr>
            <th>#</th>
            <th>اسم المرحلة</th>
            <th>صفوف</th>
            <th>إجمالي الطلاب</th>
            <th>ملاحظة</th>
            <th>الحالة</th>
            <th>العملية</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var stage in Model.Stages)
        {
            <tr>
                <td>@stage.Id</td>
                <td>@stage.StageName</td>
                <td>@stage.TotalStudents</td>
                <td>@stage.Note</td>
                <td>@(stage.IsActive ? "Active" : "Inactive")</td>
                <td>
                    <!-- Edit/Delete logic -->
                </td>
            </tr>
        }
    </tbody>
</table>

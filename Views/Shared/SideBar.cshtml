<script>
    // Toggle function for submenus

    function toggleSubmenu(submenuId) {
        var submenu = document.getElementById('submenu-' + submenuId);
        var arrow = submenu.previousElementSibling.querySelector('.menu-arrow');

        // Check the current display state and toggle the submenu
        if (submenu.style.display === 'none' || submenu.style.display === '') {
            submenu.style.display = 'block';  // Show the submenu
            arrow.classList.add('rotate');   // Rotate the arrow
        } else {
            submenu.style.display = 'none';  // Hide the submenu
            arrow.classList.remove('rotate');  // Reset the arrow rotation
        }
    }

</script>
